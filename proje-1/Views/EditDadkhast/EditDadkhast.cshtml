
@{
    ViewData["Title"] = "Dadkhast";
}
@model Dadkhast1;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>فرم حذف و ویرایش دادخواست</title>
</head>
<body dir="rtl">
    <h1 style="background-color:LightGray;">
        <fieldset>
            <legend>فرم حذف و ویرایش دادخواست</legend>
            <form asp-controller="EditDadkhast" asp-action="Authenticate" method="post">

                <table width="450" border="0" align="center">
                    <tr>
                        <td width="150" align="left">
                            خواهان :
                        </td>
                        <td>
                            <input type="text" asp-for="NationalcodeKhahan" maxlength="10" size="20" placeholder="کدملی خواهان را وارد کنید" value="">
                        </td>
                    </tr>

                    <tr>
                        <td width="150" align="left">
                            خوانده :
                        </td>
                        <td>
                            <input type="text" asp-for="NationalcodeKhande" maxlength="10" size="20" placeholder="کدملی خوانده را وارد کنید">
                        </td>
                    </tr>

                    <table width="450" border="0" align="center">
                        <tr>
                            <td width="150" align="left">
                                وکیل :
                            </td>
                            <td>
                                <input type="text" asp-for="NationalcodeVakil" maxlength="10" size="20" placeholder="کدملی وکیل را وارد کنید">
                            </td>
                        </tr>

                        <tr>
                            <td width="150" align="left">
                                مطلع:
                            </td>
                            <td>
                                <input type="text" asp-for="NationalcodeMotale" maxlength="10" size="20" placeholder="کدملی مطلع را وارد کنید">
                            </td>
                        </tr>
                        <tr>
                            <td width="150" align="left">
                                نماینده:
                            </td>
                            <td>
                                <input type="text" asp-for="NationalcodeNamayande" maxlength="10" size="20" placeholder="کدملی نماینده را وارد کنید">
                            </td>
                        </tr>


                        <tr>
                            <td width="150" align="left" valign="top">
                                شرح دادخواست :
                            </td>
                            <td>
                                <textarea rows="10" asp-for="SharheDadkhast" cols="20"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td width="150" align="left" valign="top">
                                مجوزهای خاص :
                            </td>
                            <td>
                                <textarea rows="10" asp-for="Mojavez" cols="20"></textarea>
                            </td>
                        </tr>

                        <tr>

                            <td width="150" align="left" valign="top">

                                <label for="dadkhast">خواسته:</label>
                                <select asp-for=" Khasteh " id="خواسته" dir="rtl">
                                    <option value="الزام به تمکین">الزام به تمکین</option>
                                    <option value="تعدیل نفقه">تعدیل نفقه</option>
                                    <option value="تعدیل مهریه">تعدیل مهریه</option>
                                    <option value="مطالبه مهریه">مطالبه مهریه</option>
                                    <option value="مطالبه نفقه">مطالبه نفقه</option>
                                    <option value="طلاق به دادخواست زوج"> طلاق به دادخواست زوج</option>
                                    <option value="طلاق به دادخواست زوجه">طلاق به دادخواست زوجه</option>

                                </select>

                            </td>
                        </tr>
                        
                            

                            </td>

                            </td>
                        </tr>


                        <tr>
                            <td width="150" align="left">

                                <input type="submit" value="جستجو"> :
                            </td>
                            <td>
                                <input type="text" asp-for="CodeDadkhast"maxlength="10" size="20">
                        <tr>

                            </td>

                            </td>
                        </tr>


                        <tr>
                            <td colspan="2" align="center">


                                <input type="submit" value="ویرایش اطلاعات">
                                <input type="submit" value="حذف اطلاعات">
                                <input type="reset" value="پاک کردن فرم">

                            </td>
                        </tr>
                    </table>

            </form>
        </fieldset>
    </h1>
</body>
</html>

